<Window x:Class="Vido.Parking.Ui.Wpf.Views.ConnectionStringEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection String Editor" Height="300" Width="300"
        WindowStartupLocation="CenterOwner"
        x:Name="ConnectionStringEditor">
  <Grid>
    <TextBox Text="{Binding ConnectionString, Mode=TwoWay}" TextWrapping="Wrap" Margin="10,10,10,45"/>
    <Button Content="Lưu" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="58" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=ConnectionStringEditor}"/>
  </Grid>
</Window>
