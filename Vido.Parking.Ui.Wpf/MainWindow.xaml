<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Views="clr-namespace:Vido.Parking.Ui.Wpf.Views"
  xmlns:ViewModels="clr-namespace:Vido.Parking.Ui.Wpf.ViewModels"
  x:Class="Vido.Parking.Ui.Wpf.MainWindow" Loaded="Window_Loaded"
  Title="Bãi xe Vido" MinHeight="633" MinWidth="961" WindowStartupLocation="CenterScreen">
  <Window.Resources>
    <DataTemplate DataType="{x:Type ViewModels:LaneViewModel}">
      <Views:LaneView DataContext="{Binding}" FontSize="20"/>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ListBox Margin="0,40,0,0" ItemsSource="{Binding Lanes}"
             HorizontalContentAlignment="Stretch"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             VerticalContentAlignment="Stretch"
             ScrollViewer.VerticalScrollBarVisibility="Disabled">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Columns="2" IsItemsHost="True"/>
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
    </ListBox>
    <StatusBar Grid.Row="1" Height="20">
      <TextBlock Text="{Binding Status}"/>
    </StatusBar>
  </Grid>
</Window>
