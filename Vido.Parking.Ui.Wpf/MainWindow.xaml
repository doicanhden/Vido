<Controls:MetroWindow
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Views="clr-namespace:Vido.Parking.Ui.Wpf.Views"
  xmlns:ViewModels="clr-namespace:Vido.Parking.Ui.Wpf.ViewModels"
  xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
  x:Class="Vido.Parking.Ui.Wpf.MainWindow" Loaded="Window_Loaded"
  Title="MainWindow" Height="633" Width="961">
  <Window.Resources>
    <DataTemplate DataType="{x:Type ViewModels:LaneViewModel}">
      <Views:LaneView DataContext="{Binding}"/>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <ListBox ItemsSource="{Binding Lanes}" Margin="0,40,0,0">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel IsItemsHost="True"/>
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
    </ListBox>
  </Grid>
</Controls:MetroWindow>
