<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Views="clr-namespace:Vido.Parking.Ui.Wpf.Views"
  xmlns:ViewModels="clr-namespace:Vido.Parking.Ui.Wpf.ViewModels"
  x:Class="Vido.Parking.Ui.Wpf.MainWindow"
  Title="MainWindow" Height="633" Width="961">

  <Window.DataContext>
    <ViewModels:MainViewModel/>
  </Window.DataContext>
  <Window.Resources>
    <DataTemplate DataType="{x:Type ViewModels:LaneViewModel}">
      <Views:LaneView DataContext="{Binding}"/>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <ListView ItemsSource="{Binding Lanes}"/>
  </Grid>
</Window>
